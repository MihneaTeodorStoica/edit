pub fn diff() {
    loop {
        if /(?:diff|---|\+\+\+).*/ {
            yield meta.diff.header;
        } else if /-.*/ {
            yield markup.deleted;
        } else if /\+.*/ {
            yield markup.inserted;
        } else if /.*/ {
            // Gobble the rest of the line with no highlighting.
        }
    }
}
